rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isEmailVerified() {
      return request.auth != null && request.auth.token.email_verified == true;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isActiveUser() {
      return isSignedIn() && userDoc().data.isActive == true;
    }

    function isSuperAdmin() {
      return isActiveUser() && userDoc().data.role == 'super_admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isVerifiedOwner(userId) {
      return isEmailVerified() && request.auth.uid == userId;
    }

    function isStoreOwner(storeId) {
      return isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }

    // /users/{userId}
    // Users can create their own profile.
    // Users can only read and write to their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isSuperAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSuperAdmin() && resource.data.isHidden != true;
    }

    // /stores/{storeId}
    match /stores/{storeId} {
      // Anyone can read a store's public information.
      allow read: if true;
      // A user can create a store for themselves.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      // Only the owner of the store or super admin can update it.
      allow update: if isStoreOwner(storeId) || isSuperAdmin();
      // Only super admin can delete a store (hard delete).
      allow delete: if isSuperAdmin();

      // /stores/{storeId}/categories/{categoryId}
      // Anyone can read categories.
      // Only the store owner can create, update, or delete categories.
      match /categories/{categoryId} {
        allow read: if true;
        allow write: if isStoreOwner(storeId) || isSuperAdmin();
      }

      // /stores/{storeId}/products/{productId}
      // Anyone can read products.
      // Only the store owner can create, update, or delete products.
      match /products/{productId} {
        allow read: if true;
        allow write: if isStoreOwner(storeId) || isSuperAdmin();
      }

      // /stores/{storeId}/orders/{orderId}
      // Anyone can create an order (customers placing orders).
      // Only the store owner can read, update, or delete orders.
      match /orders/{orderId} {
        allow create: if true;
        allow read, update, delete: if isStoreOwner(storeId) || isSuperAdmin();
      }

      // /stores/{storeId}/customers/{customerId}
      // Anyone can create/update customer info when placing orders.
      // Only the store owner can read or delete customers.
      match /customers/{customerId} {
        allow create, update: if true;
        allow read, delete: if isStoreOwner(storeId) || isSuperAdmin();
      }
    }

    // /store_internal/{storeId}
    // Datos internos solo para super admin
    match /store_internal/{storeId} {
      allow read, write: if isSuperAdmin();
    }

    // /plans/{planId}
    match /plans/{planId} {
      allow read, write: if isSuperAdmin();
    }

    // /payments/{paymentId}
    match /payments/{paymentId} {
      allow read, write: if isSuperAdmin();
    }

    // /audit_logs/{logId}
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // /alerts/{alertId}
    match /alerts/{alertId} {
      allow read, write: if isSuperAdmin();
    }

    // /system_config/{configId}
    match /system_config/{configId} {
      allow read, write: if isSuperAdmin();
    }

    // /impersonation_sessions/{sessionId}
    match /impersonation_sessions/{sessionId} {
      allow read, write: if isSuperAdmin();
    }
  }
}

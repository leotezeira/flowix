rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    // Users can create their own profile.
    // Users can only read and write to their own profile.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }

    // /stores/{storeId}
    match /stores/{storeId} {
      // Anyone can read a store's public information.
      allow read: if true;
      // A user can create a store for themselves.
      allow create: if isOwner(request.resource.data.ownerId);
      // Only the owner of the store can update it.
      allow update: if isOwner(resource.data.ownerId);
      // No one can delete a store.
      allow delete: if false;

      // /stores/{storeId}/categories/{categoryId}
      // Anyone can read categories.
      // Only the store owner can create, update, or delete categories.
      match /categories/{categoryId} {
        allow read: if true;
        allow write: if isOwner(get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId);
      }

      // /stores/{storeId}/products/{productId}
      // Anyone can read products.
      // Only the store owner can create, update, or delete products.
      match /products/{productId} {
        allow read: if true;
        allow write: if isOwner(get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId);
      }
    }
  }
}

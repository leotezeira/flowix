rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to images.
    // Allow authenticated store owners to write to their store's folder.
    match /stores/{storeId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/(default)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }
  }
}
